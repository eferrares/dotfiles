[user]
    name = Erich Rodrigues Ferrares
    email = erich.rodriguesf@gmail.com

[github]
    user = eferrares

[color]
    ui = auto

[color "diff"]
    frag = blue reverse
    meta = magenta reverse
    old = red blink
    new = 40 bold

[color "branch"]
    current = yellow reverse
    local = yellow ul
    remote = green bold
    plain = red bold

[color "status"]
    added = yellow
    changed = green ul
    untracked = blue blink

[push]
    default = current

[sendemail]
    smtpserver = smtp.gmail.com
    smtpserverport = 587
    smtpencryption = tls
    smtpuser = erich.rodriguesf@gmail.com

[core]
    excludesfile = ~/.gitignore
[alias]
    happify = !sh -c \"ln -s ~/.git/hooks/post-{commit,update} .git/hooks\"
[init]
    templatedir = ~/.git_template
